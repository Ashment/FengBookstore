mixin displayOrderItem(name, price)
  h1 #{name}: ¥#{price}

mixin displayOrder(order, ind)
  div#order
    -var refInd = '/Barista/OrderDone/' + ind.toString();
    h1 ______________________________________________
    a.button(href=refInd)
    -var totalPrice = 0;
    -for(var i=0; i<order.nameArray.length; i++){
      -totalPrice += Number(order.pricesArray[i]);
      +displayOrderItem(order.nameArray[i], order.pricesArray[i])
    -}
    h1 _ _ _ _ _ _ _ _ _ _ _ _
    h1 统计: ¥#{totalPrice}
    h1 ______________________________________________


doctype
html
  head
    title #{title} - 城市书房
    //FAVICON
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="/manifest.json")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#5bbad5")
    meta(name="theme-color", content="#ffffff")
    meta(http-equiv="refresh", content="10")

    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div#header
      img(src="/img/BookstoreIco.png")
      h1 BARISTA

    div#display
      -for(var i=0; i<pageData.orderArray.length; i++){
        +displayOrder(pageData.orderArray[i], i)
      -}