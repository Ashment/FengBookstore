/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #a55e38
background-color = #faf9f0
category-color = #385077
item-color = #916a4e

#header
  color #fff
  z-index 9001
  font-family 'Quicksand'
  text-align center
  overflow hidden
  position absolute
  top 0
  left 0
  right 0
  height 8vh
  font-size 7vh
  background main-color
  padding-top 2vh
  padding-bottom 1vh
  border 2px dotted darken(main-color, 40%)
  box-shadow 0px 0.5vh 8px 0px rgba(50,50,50,0.5)
  img
    display block
    margin-top -3vh
    margin-left 1vh
    height 13vh
  h1
    position absolute
    margin-top -9.4vh
    margin-left 14vh
    text-align center
    
  
#leftNav
  color #fff
  z-index 5000
  overflow auto
  position absolute
  top 11.5vh
  left 0
  right 70vw
  bottom 0
  background category-color
  padding-left 2px
  padding-right 2px
  padding-top 2px
  box-shadow 1vw 0vh 8px 0px rgba(50,50,50,0.5)
  
#mainContent
  overflow auto
  position absolute
  top 11.5vh
  left 30vw
  width 70vw
  right 0
  bottom 0
  background item-color
#footer
  overflow hidden
  position absolute
  bottom 0
  left 0
  right 0
  height 10vh
  background background-color
  
a
  color inherit
  text-decoration none

img.item
  overflow hidden
  object-fit cover
  display block
  clip rect(0, 0, 0, 0)
  height 20vh
  width 70vw
  
div.item
  position absolute
  margin-top -16vh
  margin-left 1vw
  width 68vw
  h2
    font-size 4vh
    text-shadow 2px 2px 4px #000000
  h3
    margin-top 2px
    font-size 3vh
    text-shadow 2px 2px 4px #000000
  h4
    margin-right 5vw
    margin-top 1vh
    font-size 4vh
    text-align right
    text-shadow 2px 2px 4px #000000

  

div.thumbnail
  display block
  background darken(category-color, 25%)
  margin-bottom 1vh
  margin-top 2px
  margin-left 3px
  margin-right 3px
  height 10vh
  font-size 30px
  text-align center
  border-style inset
  border 1px dotted category-color
  box-shadow 0 5px 5px 0px rgba(50,50,50,0.6)
  h2
    padding-top: 3vh
    padding-bottom: 4vh
    
div.cart
  display block
  background darken(category-color, 25%)
  margin-bottom 1vh
  margin-top 2px
  margin-left 3px
  margin-right 3px
  height 15vh
  font-size 30px
  text-align left
  border-style inset
  border 1px dotted category-color
  box-shadow 0 5px 5px 0px rgba(50,50,50,0.6)
  h2
    margin-top -4.5vh
    margin-left 17.4vw
    position absolute
    

body
  color #fff
  overflow hidden
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 100vw
  height 84vh
  overflow auto

p
  line-height 0.8